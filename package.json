{
  "name": "scarlett",
  "private": true,
  "license": "Apache-2.0",
  "author": "João Alves <joao.cpp.sca@gmail.com> and Luís Fernandes aka Apidcloud <luisapidcloud@hotmail.com>",
  "engines": {
    "node": ">=8.6.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "codecov": "3.2.0",
    "commitizen": "3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.7.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.26.2",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "lerna": "3.4.3",
    "lint-staged": "8.0.3",
    "npm-run-all": "4.1.3",
    "opt-cli": "1.6.0",
    "prettier-eslint-cli": "4.7.1",
    "validate-commit-msg": "2.14.0",
    "webpack": "4.23.1",
    "webpack-cli": "3.1.2"
  },
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "test": "jest --coverage",
    "watch:test": "jest --watch",
    "report-coverage": "codecov",
    "format": "prettier-eslint --write \"packages/*/src/**/*.js\"",
    "lint": "eslint .",
    "commit": "git-cz",
    "validate": "run-p lint test build",
    "link": "lerna bootstrap",
    "postinstall": "yarn run link"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "packages"
    ],
    "testRegex": "./(packages)/[^/]+/test/.+\\.js$",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "!packages/**/index.js",
      "packages/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "globals": {
      "window": false
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "opt --in commit-msg --exec \"validate-commit-msg\"",
      "pre-commit": "lint-staged && opt --in pre-commit --exec \"yarn test && yarn run build\""
    }
  }
}
